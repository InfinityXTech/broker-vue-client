{
    "type": "Datatable",
    "title": "Tags",
    "columns": {
        "_id": {
            "label": "ID",
            "sortable": false,
            "styles": [
                {
                    "textAlign": "center"
                }
            ],
            "renderCell": "simple.Index"
        },
        "name": {
            "label": "Name"
        },
        "status": {
            "label": "Status",
            "sortable": false,
            "renderCell": "simple.StatusTag({1: {color: 'primary', title: 'ACTIVE'}, 0: {color: 'warning', title: 'INACTIVE'}})"
        },
        "permission": {
            "label": "Permission",
            "renderCell": "custom.permissions"
        },
        "color": {
            "label": "Color"
        },
        "created_by_user.name": {
            "label": "Created By"
        },
        "actions": {
            "label": "Actions",
            "sortable": false,
            "renderCell": "custom.Actions"
        }
    }
}