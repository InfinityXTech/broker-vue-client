{
    "type": "Datatable",
    "title": "Affiliates",
    "columns": {
        "_id": {
            "label": "ID",
            "sortable": false,
            "styles": [
                {
                    "textAlign": "center"
                }
            ],
            "renderCell": "simple.Index"
        },
        "status": {
            "label": "Status",
            "sortable": false,
            "renderCell": "simple.StatusTag({1: {color: 'primary', title: 'ACTIVE'}, 0: {color: 'warning', title: 'INACTIVE'}, 2: {color: 'grey', title: 'DRAFT'}})"
        },
        "name": {
            "label": "Name",
            "renderCell": "custom.Name"
        },
        "created_by_user.name": {
            "label": "Assigned to"
        },
        "account_manager_user.name": {
            "label": "Account Manager"
        }
    }
}